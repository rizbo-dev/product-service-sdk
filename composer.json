{
  "name": "boris/product-service-sdk",
  "autoload": {
    "psr-4": {
      "Boris\\ProductServiceSdk\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Boris\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Boris Evetovic",
      "email": "boris.evetovic@infostud.com"
    }
  ],
  "scripts": {
    "fix-style": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
    "check-style": "vendor/bin/php-cs-fixer fix --allow-risky=yes --dry-run"
  },
  "require": {
    "symfony/serializer-pack": "^1.3"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.10",
    "friendsofphp/php-cs-fixer": "^3.42"
  }
}
